@model IEnumerable<FootApi.Models.Team>

@{
    ViewBag.Title = "List of U7 Teams";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Team", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostCode)
        </td>
        <td>
            @Html.ActionLink("Edit Team", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Team Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Remove Team", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
